@model AutoCollections.Models.Usuario
@{
    ViewBag.Title = "Cadastro";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />


<div class="container mt-5">
    <div class="row justify-content-center">

        <div class="col-md-4">
            <h3>Crie sua conta para fazer compras em nossa Loja!</h3>
        </div>

        <div class="col-md-6 p-4 rounded text-light" style="background:#2b1d07">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.Nome)
                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                    </div>

                    <div class="col">
                        @Html.LabelFor(m => m.Telefone)
                        @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.DataNascimento)
                        @Html.TextBoxFor(m => m.DataNascimento, new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.DataNascimento, "", new { @class = "text-danger" })
                    </div>

                    <div class="col">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.CPF)
                        @Html.TextBoxFor(m => m.CPF, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CPF, "", new { @class = "text-danger" })
                    </div>

                    <div class="col">
                        @Html.LabelFor(m => m.Senha)
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        @Html.LabelFor(m => m.NumeroEndereco)
                        @Html.TextBoxFor(m => m.NumeroEndereco, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NumeroEndereco, "", new { @class = "text-danger" })
                    </div>

                    <div class="col">
                        @Html.LabelFor(m => m.ComplementoEndereco)
                        @Html.TextBoxFor(m => m.ComplementoEndereco, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ComplementoEndereco, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-6">
                        @Html.LabelFor(m => m.CEP)
                        @Html.TextBoxFor(m => m.CEP, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CEP, "", new { @class = "text-danger" })
                    </div>
                </div>


                <button type="submit" class="btn btn-danger w-25">Continuar</button>
            }
        </div>

    </div>
</div>

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>