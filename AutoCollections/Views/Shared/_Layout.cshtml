<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoCollections</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#241803;">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/img/LogoCliente.png" width="90" height="90" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
    <div class="container my-4">
        <form action="@Url.Action("Buscar", "Home")" method="get" class="input-group">
            <input type="text" name="termo" class="form-control" placeholder="Buscar produtos..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Produto" asp-action="Catalogo">Catálogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Index">
                            <img src="~/img/IconLogin.png" alt="Login" width="30">
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <main class="my-4">
        @RenderBody()
    </main>

    <div class="FOOTER">
        <footer class="text-center text-white py-3" style="background-color:#241803;">
            &copy; 2025 - AutoCollections
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
