@{
    ViewData["Title"] = "Carrinho de Compras";
}

<link rel="stylesheet" href="~/css/Carrinho.css" />

<div class="cart-page-container">

    <h1 class="cart-title">Meu Carrinho</h1>

    <div class="cart-container">

        <!-- Lista de produtos -->
        <div class="cart-items">
            <div class="cart-item" data-preco="150.00">
                <img src="https://rihappy.vtexassets.com/arquivos/ids/7471009/17333050687094.jpg?v=638754876308300000" alt="Miniatura Lamborghini">
                <div class="item-info">
                    <h3>Miniatura Carro Lamborghini</h3>
                    <p>Preço unitário: R$ 150,00</p>
                    <div class="quantity-container">
                        <label>Quantidade:</label>
                        <input type="number" class="item-quantity" value="1" min="1">
                    </div>
                    <button class="remove-btn">Remover</button>
                </div>
            </div>

            <div class="cart-item" data-preco="300.00">
                <img src="https://m.media-amazon.com/images/I/51-d2cf1mSL.jpg" alt="Miniatura Porsche">
                <div class="item-info">
                    <h3>Miniatura Carro Porsche</h3>
                    <p>Preço unitário: R$ 300,00</p>
                    <div class="quantity-container">
                        <label>Quantidade:</label>
                        <input type="number" class="item-quantity" value="2" min="1">
                    </div>
                    <button class="remove-btn">Remover</button>
                </div>
            </div>
        </div>

        <!-- Resumo do pedido -->
        <div class="cart-summary">
            <h2>Resumo do Pedido</h2>
            <p>Subtotal: <span id="subtotal">R$ 750,00</span></p>
            <p>Frete: <span id="frete">R$ 20,00</span></p>
            <p><strong>Total: <span id="total">R$ 770,00</span></strong></p>
            <a asp-controller="Carrinho" asp-action="FinalizarCompra" class="btn-finalizar">Finalizar Compra</a>
        </div>

    </div>
</div>

<script>
    function atualizarTotal() {
        const items = document.querySelectorAll('.cart-item');
        let subtotal = 0;

        items.forEach(item => {
            const preco = parseFloat(item.dataset.preco);
            const quantidade = parseInt(item.querySelector('.item-quantity').value);
            subtotal += preco * quantidade;
        });

        document.getElementById('subtotal').innerText = `R$ ${subtotal.toFixed(2)}`;
        const frete = 20.00;
        document.getElementById('frete').innerText = `R$ ${frete.toFixed(2)}`;
        document.getElementById('total').innerText = `R$ ${(subtotal + frete).toFixed(2)}`;
    }

    // Atualiza total quando muda quantidade
    document.querySelectorAll('.item-quantity').forEach(input => {
        input.addEventListener('input', atualizarTotal);
    });

    // Remove item
    document.querySelectorAll('.remove-btn').forEach(btn => {
        btn.addEventListener('click', e => {
            e.target.closest('.cart-item').remove();
            atualizarTotal();
        });
    });

    // Inicializa total
    atualizarTotal();
</script>