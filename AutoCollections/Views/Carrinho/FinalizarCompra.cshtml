@{
    ViewData["Title"] = "Finalizar Compra";
}

<link rel="stylesheet" href="~/css/FinalizarCompra.css" />

<div class="checkout-container">

    <h1 class="checkout-title">Finalizar Compra</h1>

    <div class="checkout-content">
        <div class="checkout-left">
            <h2>Informações de Entrega</h2>
            <form>
                <div class="form-group">
                    <label for="nome">Nome Completo</label>
                    <input type="text" id="nome" placeholder="Digite seu nome">
                </div>

                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" placeholder="Digite seu e-mail">
                </div>

                <div class="form-group">
                    <label for="endereco">Endereço</label>
                    <input type="text" id="endereco" placeholder="Rua, número, bairro">
                </div>

                <div class="form-group">
                    <label for="cep">CEP</label>
                    <input type="text" id="cep" placeholder="Digite o CEP">
                </div>

                <div class="form-group">
                    <label for="telefone">Telefone</label>
                    <input type="text" id="telefone" placeholder="(XX) XXXXX-XXXX">
                </div>
            </form>
        </div>

        
        <div class="checkout-right">
            <h2>Resumo do Pedido</h2>
            <div class="order-summary">
                <div class="order-item">
                    <span>Miniatura Carro Lamborghini</span>
                    <span>R$ 150,00</span>
                </div>
                <div class="order-item">
                    <span>Miniatura Carro Porsche</span>
                    <span>R$ 300,00</span>
                </div>
                <div class="order-total">
                    <span>Total:</span>
                    <span>R$ 450,00</span>
                </div>
            </div>

            <a href="/Pagamento" class="btn-finalizar">Finalizar Compra</a>
        </div>

    </div>

</div>