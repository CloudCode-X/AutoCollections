@model IEnumerable<AutoCollections.Models.Produto>
@{
    ViewData["Title"] = "AutoCollections";
}

<div id="carouselExampleIndicators" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://carrefourbr.vtexassets.com/arquivos/ids/189648827/nissan-speed-skyline-lego-gtr-76917-2.jpg?v=638796433635230000" class="d-block w-100" style="height:400px; object-fit:cover;" alt="NissanSkyline">
        </div>
        <div class="carousel-item">
            <img src="https://rihappy.vtexassets.com/arquivos/ids/7471009/17333050687094.jpg?v=638754876308300000" class="d-block w-100" style="height:400px; object-fit:cover;" alt="Lamborghini">
        </div>
        <div class="carousel-item">
            <img src="https://limahobbies.vteximg.com.br/arquivos/ids/228353/Miniatura-Carro-Lamborghini-Countack-1-64-Maisto-15541.jpg?v=638670416111000000" class="d-block w-100" style="height:400px; object-fit:cover;" alt="Lamborghini2">
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>

<div class="container">
    <h3 class="mb-4">Mais Vendidos</h3>
    <div class="row g-4">
        @foreach (var produto in Model.Take(4))
        {
            <div class="col-12 col-md-6">
                <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@produto.IdProduto" class="text-decoration-none w-100">
                <div class="card h-100 text-center">
                    <img src="https://limahobbies.vteximg.com.br/arquivos/ids/228353/Miniatura-Carro-Lamborghini-Countack-1-64-Maisto-15541.jpg?v=638670416111000000" class="card-img-top" style="height:230px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title">carro</h5>
                        <p class="card-text text-success fw-bold">R$999.ToString("F2")</p>
                    </div>
                </div>
                </a>
            </div>
        }
    </div>
</div>

<div class="container mt-5">
    <h3 class="mb-4">Recomendados</h3>
    <div class="row g-4">
        @foreach (var produto in Model.Skip(4).Take(4))
        {
            <div class="col-12 col-md-6">
                <div class="card h-100 text-center">
                    <img src="https://limahobbies.vteximg.com.br/arquivos/ids/228353/Miniatura-Carro-Lamborghini-Countack-1-64-Maisto-15541.jpg?v=638670416111000000" class="card-img-top" style="height:230px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title">carro</h5>
                        <p class="card-text text-success fw-bold">R$999.ToString("F2")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>